{% extends 'base.html.twig' %}

{% block title %}Details{% endblock %}
{% block hero %}{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center mt-5">
           <div class="card w-75 shadow m-4 text-center" >
           <div class="card-body mt-3 ">
           
           <img src="{{ meals.image }}" class="card-img-top mt-4" >
                      <h5 class="card-title fw-bolder fs-2">{{ meals.name }} </h5>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><p class="card-text">Type :</p>{{ meals.type }}</li>
                    <li class="list-group-item"><p class="card-text">Description :{{ meals.description }}</p></li>
                    <li class="list-group-item"><p class="card-text"> Preparation Time</p>{{ meals.prep_time }}</li>
                    <li class="list-group-item"><p class="card-text">Ingredients</p>{{ meals.ingredients }}</li>
                    <li class="list-group-item"><p class="card-text">Calories</p>{{ meals.calories }}</li>
                    
                    <li class="list-group-item"><p class="card-text">Check Recipe Online :</p><a href="#">{{ meals.url }}<a/></li>
                </ul>
                    <div class="card-body d-flex justify-content-evenly">

                     {% if is_granted('ROLE_ADMIN') %}
                            <a href="/edit/{{ meals.id }}" class="btn btn-outline-success  fw-light rounded-pill">edit</a>
                            <a href="/delete/{{ meals.id }}" class="btn btn-outline-danger  fw-light rounded-pill" onclick="return confirm('Are you sure you want to delete this?')">delete</a>
                        <hr>
                        {% endif %}
                        
                        <a href="/" class="btn btn-outline-primary   rounded-pill">Go Back</a>  

                    </div>
            </div>
       </div>
       </div>
{% endblock %}



{% extends 'base.html.twig' %}
{% block body %}
    <h2 class="page-header"> Latest meals </h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>meals/th>
                <th>Due Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
          {% for meals in meals %} 
            <tbody>
                <tr>
                    <th scope="row">{{meals.id}}</th> 
                    <td>{{meals.name}}</td> 
                    <td> <a href="/details/{{meals.id}}" class="btn btn-success">View</a>  
                        <a href="/edit/{{meals.id}}" class="btn btn-default">Edit</a>
                        <a href="/delete/{{meals.id}}" class="btn btn-danger">Delete</a>       
                    </td>
                </tr> 
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
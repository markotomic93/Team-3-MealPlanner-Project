{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="container mt-5">
     <h1>This is main page </h1>
     <h2 class="text-center mt-2 mb-5 fw-light"> Latest Meals</h2>
   <a href="/create/">Create new Meal</a>
    <div class="row">
        {% for meal in meals %}
            <div class="col-10 offset-1 col-md-4 offset-md-0">
                <div class="card mb-4" >
                    <div class="card-body shadow bg-light">
                    <img class="card-img-top" src="{{ meal.image }}">
                        <h5 class="card-title">{{ meal.name }}</h5>
                        <h5 class="card-title">{{ meal.description }}</h5>
                        <h5 class="card-title">{{ meal.prep_time }}</h5>
                        <a href="/edit/{{ meal.id }}" class="btn btn-outline-success btn-sm fw-light rounded-pill">edit</a>
                        <a href="/details/{{ meal.id }}" class="btn btn-outline-warning btn-sm fw-light rounded-pill">details</a>
                        <a href="/delete/{{ meal.id }}" class="btn btn-outline-danger btn-sm fw-light rounded-pill">delete</a>  
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
<div>

{% endblock %}
